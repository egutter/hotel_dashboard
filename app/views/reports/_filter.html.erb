<div class="widget stacked">
  <div class="widget-header">
    <i class="icon-filter"></i>
    <h3>Filtros</h3>
    <div class="pull-right" style="padding-right: 10px;"><a href="#" id="showFilter">Mostrar</a></div>
  </div>
  <div id="filters" class="widget-content">
    <form class="form-horizontal">
      <fieldset>
        <div class="row">
          <div class="span5">
            <!--<div style="padding-left: 50px;"><h4>Fecha</h4></div>-->
            <div class="control-group">
              <label class="control-label" for="from_date">Fecha desde:</label>
              <div class="controls">
                <input type="text" id="from_date" class="input-small" name="from_date" value="<%=@date_range.begin.strftime('%d/%m/%Y')%>"/>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="to_date">Fecha hasta:</label>
              <div class="controls">
                <input type="text" id="to_date" class="input-small" name="to_date" value="<%=@date_range.end.strftime('%d/%m/%Y')%>"/>
              </div>
            </div>
          </div>
          <div class="span5">
            <div class="control-group">
              <label class="control-label" for="from_date">Tarifa:</label>
              <div class="controls">
                <select id="rate-code-filter" data-placeholder="Seleccione un código..." class="input-large chzn-select" multiple>
                  <% @rate_codes.each do |rate_code| %>
                    <option value="<%= rate_code.code %>"><%= rate_code.code %> - <%= rate_code.description %></option>
                  <% end %>
                </select>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="from_date">Fuente:</label>
              <div class="controls">
                <select id="origin-of-booking-filter" data-placeholder="Seleccione un código..." class="input-large chzn-select" multiple>
                  <% @origin_of_bookings.each do |origin_of_booking| %>
                    <option value="<%= origin_of_booking.code %>"><%= origin_of_booking.code %> - <%= origin_of_booking.description %></option>
                  <% end %>
                </select>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="span11">
            <button type="submit" id="filter-report" class="btn btn-primary pull-right">Filtrar</button>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>